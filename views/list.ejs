
<%- include('header'); -%>
    <div class="box" id="heading">
        <h1> <%= listTitle %></h1>
    </div>
    
        <div class="box">
            <% for(var i = 0; i < todoList.length; i++){ %> 
            <div class="item">
                <input type="checkbox">
                <p> <%= todoList[i] %> </p>
            </div>
            <% } %> 
            <form class="item" action="/" method="POST">
                <input type="text" name="todo" placeholder="What have for today?" autocomplete="off">
                <button type="submit" name="list" value=<%= listTitle  %> >+</button>
            </form>
        </div>

    </div>

<%- include('footer'); -%>